---
layout: false
---
{%- assign path_segments = page.url | split: '/' -%}
{%- assign user = path_segments[1] -%}
{%- assign sorted_posts = site.blogs | sort: 'date' | reverse -%}
<?xml version="1.0" encoding="utf-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
  <channel>
    <title type="html">{{ user | xml_escape }}'s blog</title>
    <link>{{ page.url | absolute_url | xml_escape }}</link>
    <description>{{ "I'm blogging like it's 1999." | xml_escape }}</description>
    <pubDate>{{ site.time | date_to_xmlschema }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_xmlschema }}</lastBuildDate>
    <docs>https://www.rssboard.org/rss-specification</docs>
    <generator uri="https://blogs.catskull.net" version="{{ jekyll.version }}">blogs.catskull.net (jekyll {{ jekyll.version }})</generator>
    <atom:link href="{{ page.url | absolute_url }}"/>
    {% for post in sorted_posts %}
      {% assign folder = post.path | split: '/' | slice: 1 | first %}
      {% if folder == user and post.name != 'index.html' and post.name != 'feed.xml' %}
        <item>
          {% assign post_title = post.title | smartify | strip_html | normalize_whitespace | xml_escape %}
          <title type="html">{{ post_title }}</title>
          <link href="{{ post.url | absolute_url }}" rel="alternate" type="text/html" title="{{ post_title }}" />
          <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
          <guid>{{ post.id | absolute_url | xml_escape }}</guid>
          <author>{{ user }}</author>
          <description type="html" xml:base="{{ post.url | absolute_url | xml_escape }}"><![CDATA[{{ post.content | strip }}]]></description>
        </item>
      {% endif %}
    {% endfor %}
  </channel>
</rss>
